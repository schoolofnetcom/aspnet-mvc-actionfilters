@model WebApplication1.Models.CarrinhoComprasViewModel

@{
    ViewBag.Title = "Carrinho de Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Resumo do Carrinho de Compras</h2>
<p>
    @Model.Mensagem
</p>
<div>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var produto in Model.Produtos)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Valor</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td><strong>TOTAL</strong></td>
                <td><strong>@Model.ValorTotal</strong></td>
            </tr>
        </tfoot>
    </table>

</div>

<div>

    @Html.Action("Categorias", "CarrinhoCompras")
    @{Html.RenderAction("Categorias", "CarrinhoCompras");}

</div>

